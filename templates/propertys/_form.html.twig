<div class="container m-5">
    <h1 class="m-4">Création d'une Property</h1>

    {# read and display just one flash message type #}
    {# {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %} #}
    {{ form_start(form) }}
<div class="card">
    <div class="container">
        
        <div class="row">
            <h3 class="m-4">Infos Détails</h3>
            <div class="form-group col-6">
                {{ form_label(form.code) }}
                {{ form_widget(form.code) }}
                <div class="form-error">
                    {{ form_errors(form.code) }}
                </div>
            </div>

            <div class="form-group col-6">
                {{ form_label(form.surface) }}
                {{ form_widget(form.surface) }}
                <div class="form-error">
                    {{ form_errors(form.surface) }}
                </div>
            </div>

            <div class="form-group col-6">
                {{ form_label(form.chambres) }}
                {{ form_widget(form.chambres) }}
                <div class="form-error">
                    {{ form_errors(form.chambres) }}
                </div>
            </div>

            <div class="form-group col-6">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix) }}
                <div class="form-error">
                    {{ form_errors(form.prix) }}
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-4">
        <div class="row">
            <div class="form-group col-4">
                {{ form_label(form.numero_etage) }}
                {{ form_widget(form.numero_etage) }}
                <div class="form-error">
                    {{ form_errors(form.numero_etage) }}
                </div>
            </div>
            <div class="form-group col-4">
                {{ form_label(form.etages) }}
                {{ form_widget(form.etages) }}
                <div class="form-error">
                    {{ form_errors(form.etages) }}
                </div>
            </div>

            <div class="form-group col-4">
                {{ form_label(form.salle_bains) }}
                {{ form_widget(form.salle_bains) }}
                <div class="form-error">
                    {{ form_errors(form.salle_bains) }}
                </div>
            </div>


        </div>
    </div>
</div>
<br>
<div class="card">
    <div class="container m-2">
      
        <div class="row">
            <h3>Loclaisation</h3>
            <div class="form-group col-6">
                {{ form_label(form.adresse) }}
                {{ form_widget(form.adresse) }}
                <div class="form-error">
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
            <div class="form-group col-6">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville) }}
                <div class="form-error">
                    {{ form_errors(form.ville) }}
                </div>
            </div>

            <div class="form-group col-6">
                {{ form_label(form.code_postale) }}
                {{ form_widget(form.code_postale) }}
                <div class="form-error">
                    {{ form_errors(form.code_postale) }}
                </div>
            </div>

            <div class="form-group col-6">
                {{ form_label(form.region) }}
                {{ form_widget(form.region) }}
                <div class="form-error">
                    {{ form_errors(form.region) }}
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="card mb-4">
    <div class="container">
        <div class="row">
            <h3 class="m-4">Installations</h3>
            <div class="col-4">{{ form_row(form.internet, {label_attr: {class: 'checkbox-custom'} }) }}</div>
            <div class="col-4">{{ form_row(form.balcon, {label_attr: {class: 'checkbox-custom'} }) }}</div>
            <div class="col-4">{{ form_row(form.gym, {label_attr: {class: 'checkbox-custom'} }) }}</div>
            <div class="col-4">{{ form_row(form.piscine, {label_attr: {class: 'checkbox-custom'} }) }}</div>
            <div class="col-4">{{ form_row(form.garage, {label_attr: {class: 'checkbox-custom'} }) }}</div>
            <div class="col-4">{{ form_row(form.camera, {label_attr: {class: 'checkbox-custom'} }) }}</div>
        </div>
    </div>
</div>

   

        <div>{{ form_row(form.image, {label_attr: {class: 'image'} }) }}</div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="form-group mt-4">
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

        </div>
 


    {{ form_end(form) }}
</div>


























